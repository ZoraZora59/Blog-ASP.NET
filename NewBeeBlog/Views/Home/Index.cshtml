
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var db = new NewBeeBlog.Models.NewBeeBlogContext();
    var listBlog = db.TextLists.ToList();
}
@for (int i = 0; i < listBlog.Count; i++)
{
    <div class="day">
        <div class="dayTitle">
            <a id="homepage1_HomePageDays_DaysList_ctl00_ImageLink">@listBlog[i].TextChangeDate.ToString()</a>
        </div>


        <div class="postTitle">
            <a id="homepage1_HomePageDays_DaysList_ctl00_DayList_TitleUrl_0" class="postTitle2" href="/home/blog/@listBlog[i].TextID">@listBlog[i].TextTitle</a>
        </div>
        <div class="postCon">
            <div class="c_b_p_desc">
                @if (listBlog[i].Text.Length < 100)
                {
                    @Html.Raw(@listBlog[i].Text)
                }
                else
                {
                    @Html.Raw(@listBlog[i].Text.Substring(0,50))
                }

                <a href="/home/blog/@listBlog[i].TextID">阅读全文</a>
            </div>
        </div>
        <div class="clear"></div>
        <div class="postDesc">posted @listBlog[i].TextChangeDate.ToString() NewbeeBlog 阅读(14) 评论(0)  <a href="/home/blog/@listBlog[i].TextID">@listBlog[i].TextTitle" rel="nofollow">编辑</a></div>
        <div class="clear"></div>

    </div>
}


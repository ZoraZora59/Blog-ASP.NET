@model NewBeeBlog.ViewModels.RegisterUser
@{
    ViewBag.Title = "用户注册";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link href="~/front/css/login2.css" rel="stylesheet" />

    <script src="~/front/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/front/Scripts/jquery.validate.min.js"></script>
    <script src="~/front/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>注册</title>
</head>

<body>
    <h1><font color="#0081c1">个人博客注册</font></h1>

    <div class="login" style="margin-top:50px;">

        <div class="header">
            <div class="switch" id="switch">
                
                <a class="switch_btn" id="switch_login" tabindex="8">快速注册</a><div class="switch_bottom" id="switch_bottom" style="position: absolute; width: 64px; left: 0px;"></div>
            </div>
        </div>

        <!--注册-->
        

        <div class="web_login">

            @using (Html.BeginForm("Register", "Manage", FormMethod.Post))
            {
                <ul class="reg_form" id="reg-ul">
                    <div id="userCue" class="cue">注册请注意格式</div>

                    <li>

                        <label for="user" class="input-tips2">用户名：</label>
                        <div class="inputOuter2">
                            @Html.TextBoxFor(m => m.Account, new { @class = "inputstyle2", placeholder = "请输入用户名或邮箱" })
                            @Html.ValidationMessageFor(m => m.Account)
                        </div>

                    </li>

                    <li>
                        <label for="passwd" class="input-tips2">密码：</label>
                        <div class="inputOuter2">
                            @Html.PasswordFor(m => m.Password, new { @class = "inputstyle2", placeholder = "请输入密码" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>

                    </li>
                    <li>
                        <label for="passwd2" class="input-tips2">确认密码：</label>
                        <div class="inputOuter2">
                            @Html.PasswordFor(m => m.Cpassword, new { @class = "inputstyle2", placeholder = "请确认密码" })
                            @Html.ValidationMessageFor(m => m.Cpassword)
                        </div>

                    </li>
                    <li>
                        <label for="user" class="input-tips2">验证码：</label>
                        <div class="inputOuter3">

                            @Html.TextBoxFor(m => m.Code, new { @class = "inputstyle3" })
                            @Html.ValidationMessageFor(m => m.Code)
                        </div>
                        <img src="/home/ValidateCode/" style="position:relative;left:150px;">
                    </li>


                    <li>
                        <div class="inputArea">
                            <button type="submit" id="regUser" style="margin-top:10px;margin-left:120px;width:150px;height:40px;" class="button_blue">注    册</button>

                        </div>
                    </li>

                    <div class="cl"></div>
                </ul>
            }





        </div>
        <!--注册end-->
    </div>
    <div class="jianyi">*推荐使用ie8或以上版本ie浏览器或Chrome内核浏览器访问本站</div>
</body>
</html>


@model NewBeeBlog.ViewModels.ManageMain
@{
    ViewBag.Title = "博客后台管理";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/front/EasyUi/jquery.min.js"></script>
    <script src="~/front/EasyUi/jquery.easyui.min.js"></script>
    <!--先引用jquery.min再引用jquery-->
    <script src="~/front/EasyUi/locale/easyui-lang-zh_CN.js"></script>
    <link href="~/front/EasyUi/themes/gray/easyui.css" rel="stylesheet" />
    <link href="~/front/EasyUi/themes/icon.css" rel="stylesheet" />
    <link href="~/front/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/front/css/index.css" rel="stylesheet" />
    <script src="~/front/js/jquery.min.js"></script>
    <script src="~/front/js/index.js"></script>
    <script type="text/javascript">
        function AddTab(title, link) {
            //alert('asd');
            //如果存在相同标签的tab就直接选中
            if ($('#tt').tabs('exists', title)) {
                $('#tt').tabs('select', title);
            }
            else
            {
                //新增一个iframe
                var html = '<iframe srcolling="auto" frameborder="0" src="'+link+'" style="width:100%;height:100%"></iframe>';
                $('#tt').tabs('add', { title: title, content: html, closable: true });


            }
        }
        </script>
</head>

<body class="easyui-layout">
    <div data-options="region:'north',border:false" style="height:60px;background:#222222;padding:10px"><font color="white" size="5">XXX的博客后台管理</font></div>
    <div data-options="region:'west',split:false,title:'导航'" style="width:325px;padding:10px;">
        <div class="s-side">
            <ul>
                <!--这部分是导航栏信息。-->
                <li class="s-firstItem first">
                    <a href="#">
                        <i class="fa fa-home"></i>
                        <span>首页</span>
                    </a>
                </li>
                <li class="first">
                    <div class="d-firstNav s-firstNav">
                        <i class="fa fa-bars"></i>
                        <span><font color="white">一级菜单</font></span>
                        <i class="fa fa-caret-right fr"></i>
                    </div>
                    <ul class="d-firstDrop s-firstDrop">
                        <li class="s-secondItem">
                            <i class="fa fa-minus-square-o"></i>
                            <a href="#" onclick="AddTab('博客配置', '/Manage/Config');">博客配置</a>
                        </li>
                        <li class="s-secondItem">
                            <i class="fa fa-minus-square-o"></i>
                            <a href="#">二级导航</a>
                        </li>
                    </ul>
                </li>
                <li class="first">
                    <div class="d-firstNav s-firstNav">
                        <i class="fa fa-bars"></i>
                        <span><font color="white">一级菜单</font></span>
                        <i class="fa fa-caret-right fr"></i>
                    </div>
                    <ul class="d-firstDrop s-firstDrop">
                        <li class="s-secondItem">
                            <i class="fa fa-minus-square-o"></i>
                            <a href="/Manage/Config">博客配置</a>
                        </li>
                        <li class="s-secondItem">
                            <i class="fa fa-minus-square-o"></i>
                            <a href="#">二级导航</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    
    <div data-options="region:'south',border:false" style="height:20px;background:#d8d8d8;padding:2px;">XXX的个人博客 @DateTime.Now.Year </div>
    <div data-options="region:'center'" id="tt" class="easyui-tabs"></div>
</body>
<h2>欢迎，管理员</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        截止页面刷新为止，本站数据统计如下：
    </div>
    <br />
    <div class="form-group">
        <span class="text-">
            用户数量为&emsp;
            @Html.Encode(Model.UserCount)
        </span>
    </div>
    <br />
    <div class="form-group">
        <span>
            文章数量为&emsp;
            @Html.Encode(Model.TextCount)
        </span>
    </div>
    <br />
    <div class="form-group">
        <span>
            评论数量为&emsp;
            @Html.Encode(Model.CommitCount)
        </span>
    </div>
    <br />
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="/Manage/Register">


@{
    ViewBag.Title = "首页";
    Layout = null;
}
<link href="~/kindeditor/plugins/code/prettify.css" rel="stylesheet" type="text/css" />
<script src="~/kindeditor/lang/zh_CN.js" type="text/javascript"></script>
<script src="~/kindeditor/kindeditor-all.js" type="text/javascript"></script>
<script src="~/kindeditor/plugins/code/prettify.js" type="text/javascript"></script>

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/front/EasyUi/jquery.min.js"></script>
    <script src="~/front/EasyUi/jquery.easyui.min.js"></script>
    <!--先引用jquery.min再引用jquery-->>
    <script src="~/front/EasyUi/locale/easyui-lang-zh_CN.js"></script>
    <link href="~/front/EasyUi/themes/gray/easyui.css" rel="stylesheet" />
    <link href="~/front/EasyUi/themes/icon.css" rel="stylesheet" />
    <script type="text/javascript">
        function AddTab(title, link) {
            //如果tabs容器里面存在相同标题的选项卡 则直接让这个选项选中
            if ($('#tt').tabs('exists', title)) {
                $('#tt').tabs('select', title);
            }
            else //如果不存在 则新增一个tabs 是一个iframe的页面
            {
                var html = '<iframe scrolling="auto" frameborder="0" src="' + link + '" style="width:100%;height:100%"></iframe>';
                $('#tt').tabs('add', { title: title, content: html, closable: true })
            }
        }
    </script>
</head>
<body class="easyui-layout">
    <div data-options="region:'north',border:false" style="height:60px;background:#222222;padding:10px"><font color="white" size="5">XXX的博客后台管理</font></div>
    <div data-options="region:'west',split:false,title:'导航'" style="width:325px;padding:10px;">
       <ul>
            <li>
                <a href="#" onclick="AddTab('博客配置','/manage/config');">博客配置</a>
            </li>
            <li>
                <a href="#" onclick="AddTab('新增栏目','/manage/catalogadd');">新增栏目</a>
            </li>
            <li>
                <a href="#" onclick="AddTab('栏目管理','/manage/catalogmanage');">栏目管理</a>
            </li>
            <li>
                <a href="#" onclick="AddTab('博文管理','/manage/blogmanage');">博文管理</a>
            </li>
            <li>
                <a href="#" onclick="AddTab('新增博文','/manage/blogadd');">新增博文</a>
            </li>
        </ul>
        
    </div>
    <div data-options="region:'south',border:false" style="height:20px;background:#d8d8d8;padding:2px 5px;">NewBee博客 @DateTime.Now.Year </div>
    <div data-options="region:'center'" id="tt" class="easyui-tabs" >
        <div id="tt" class="easyui-tabs" title="home" conent ='<iframe scrolling="auto" frameborder="0" src="/manage/managehome" style="width:100%;height:100%"></iframe>' closable=true>
           
        </div>
    </div>
    
           


</body>
</html>


@model IEnumerable<NewBeeBlog.ViewModels.ManageUser>
@{
    ViewBag.Title = "ManageUser";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}
<script type="text/javascript">
    $(function () {
        $('#List').datagrid({
            url: '/SysSample/GetList',
            width: $(window).width() - 10,
            methord: 'post',
            height: $(window).height() - 35,
            //fitColumns: true,
            //sortName: 'Id',
            //sortOrder: 'desc',
            //idField: 'Id',
            striped: true, //奇偶行是否区分
            //singleSelect: true,//单选模式
            //rownumbers: true,//行号
            columns: [[
                { field: 'Account', title: @Html.DisplayNameFor(model => model.Account), width: 40% },
                { field: 'CommitCount', title: @Html.DisplayNameFor(model => model.CommitCount), width: 30% },
                { field: 'Button', title:'', width: 30%},
            ]]
        });
    });
</script>
<table id="List" title="@ViewBag.Title" class="easyui-datagrid" 
       rownumbers="true" fitColumns="true" singleSelect="true">
    <thead>
        <tr>
            <th field="Account" width="400">@Html.DisplayNameFor(model => model.Account)</th>
            <th field="CommitCount" width="100">@Html.DisplayNameFor(model => model.CommitCount)</th>
            <th field="Button" width="100"></th>
        </tr>
    </thead>
</table>
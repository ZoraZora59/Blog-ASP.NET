@model IEnumerable<NewBeeBlog.Models.CommitList>
<script src="~/front/EasyUi/jquery.min.js"></script>
<script src="~/front/EasyUi/jquery.easyui.min.js"></script>
<!--先引用jquery.min再引用jquery-->
<script type="text/javascript"></script>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TextID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommitText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommitChangeDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TextID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommitText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommitChangeDate)
            </td>
            <td>
                <button class="button_blue" onclick="deleteCommit('@item.CommitID')">删除此评论</button>
            </td>
        </tr>
    }

</table>
<script>
    function deleteCommit(cid) {//TODO:添加删除评论的实现方法
        alert('成功进入');
        $.ajax({
            ajax: false,
            type: "POST",//FromMethod
            url: "/Home/DeleteCommit",//"/Controller/Action"
            data: { CommitID: cid },//参数 "参数名："参数值""
            datatype: 'html',
            error: function () {
                alert('删除成功');
            }
        });
        window.location.href = "/Manage/ManageCommit";
    }
</script>

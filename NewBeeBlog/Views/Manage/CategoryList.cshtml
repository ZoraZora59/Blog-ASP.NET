                //    data: { CategoryName: c},//参数 "参数名："参数值""
                //    datatype: 'html',
                //    success: function () {
                //        alert('删除成功');
                //        document.getElementById(c).parentElement.remove();
                //    },
                //    error: function (data) {
                //        alert('删除失败');
                //    }
                //});

                $.post("/Manage/DeleteCategory", { CategoryName: c }, function (data) {
                    if (data == 0) {
                        document.getElementById(c).parentElement.remove();
                        alert("删除成功");
                    }
                    else {
                        alert("删除失败");
                    }

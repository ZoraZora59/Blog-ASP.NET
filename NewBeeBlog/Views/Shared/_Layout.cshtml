@{ 
    var currentUser = ViewBag.currentLoginInfo as NewBeeBlog.Models.User;
    var name = currentUser == null ? string.Empty : currentUser.Account;
    var confuginfo = ViewBag.Config as NewBeeBlog.ViewModels.BlogConfig;
}
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="referrer" content="origin">
    <title>@confuginfo.Name</title>

    <link href="~/front/index_files/blog-common.css" rel="stylesheet" />
    <link href="~/front/index_files/bundle-CodingLife.css" rel="stylesheet" />
    <link href="~/front/index_files/373006.css" rel="stylesheet" />
    <link id="mobile-style" media="only screen and (max-width: 767px)" type="text/css" rel="stylesheet" href="index_files/bundle-CodingLife-mobile.css">
    <link title="RSS" type="application/rss+xml" rel="alternate" href="https://www.cnblogs.com/jackchensir/rss">
    <link title="RSD" type="application/rsd+xml" rel="EditURI" href="https://www.cnblogs.com/jackchensir/rsd.xml">
    <link type="application/wlwmanifest+xml" rel="wlwmanifest" href="https://www.cnblogs.com/jackchensir/wlwmanifest.xml">
    <script async="" src="index_files/analytics.js"></script>
    <script src="index_files/jquery-2.js"></script>
    <script>var currentBlogId = 373006; var currentBlogApp = 'jackchensir', cb_enable_mathjax = false; var isLogined = false;</script>
    <script src="index_files/blog-common.js" type="text/javascript"></script>
</head>
<body>
    
    <a name="top"></a>


    <!--done-->
    <div id="home">
        <div id="header">
            <div id="blogTitle">
 

                <!--done-->
                <h1><a id="Header1_HeaderTitle" class="headermaintitle" href="https://www.cnblogs.com/jackchensir/">@confuginfo.Name</a></h1>
                <h2>@confuginfo.Sign</h2>
            </div><!--end: blogTitle 博客的标题和副标题 -->
            <div id="navigator">

                <ul id="navList">

                    <li><a id="blog_nav_myhome" class="menu" href="/">首页</a></li>
                    <li><a id="blog_nav_contact" class="menu" rel="nofollow" href="/Textlists/">博文</a></li>
                    @if (currentUser == null)//如果没有登录
                    {
                        <li><a id="blog_nav_admin" class="menu" rel="nofollow" href="/Manage/Login">登录</a></li>
                        <li><a id="blog_nav_admin" class="menu" rel="nofollow" href="/Manage/Register">注册</a></li>

                    }
                    else
                    {
                        if (name == "admin123")//如果是管理员
                        {
                            <li><a id="blog_nav_admin" class="menu" rel="nofollow" href="/Manage/index">管理</a></li>
                        }
                        else//非管理员
                        {
                            <li><a id="blog_nav_admin" class="menu" rel="nofollow" href="Home/ChangeInfo">信息修改</a></li>
                        }


                    }




                </ul>
                <div class="blogStats">
                    <div id="blog_stats">
                        <span id="stats_post_count">随笔 - 6&nbsp; </span>
                        <span id="stats_article_count">文章 - 0&nbsp; </span>
                        <span id="stats-comment_count">评论 - 1</span>
                    </div>

                </div><!--end: blogStats -->
            </div><!--end: navigator 博客导航栏 -->
        </div><!--end: header 头部 -->
        <div id="main">
            <div id="mainContent">
                <div class="forFlow">
                @RenderBody()
                <div class="topicListFooter"></div>
                </div><!--end: forFlow -->
            </div><!--end: mainContent 主体内容容器-->
            @Html.Partial("~/Views/Shared/_Sidebar.cshtml")
            <div class="clear"></div>
        </div><!--end: main -->
        <div class="clear"></div>
        <div id="footer">
            <!--done-->
            Copyright ©2019 NewBeeBlog
        </div><!--end: footer -->
    </div><!--end: home 自定义的最大容器 -->

    </body>
</html>